OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional (recommended by OpenRouter)
# OPENROUTER_SITE_URL=https://your-site.example
# OPENROUTER_APP_NAME=AI Chat Comparison
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

PORT=3000
NODE_ENV=development

# Security / limits
# Comma-separated list of allowed frontend origins (exact match).
ALLOWED_ORIGINS=http://localhost:5173

# Express JSON body limit (e.g. 1mb, 5mb)
JSON_BODY_LIMIT=1mb

# Rate limiting on /api
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=60

# Uploads
UPLOAD_MAX_BYTES=10485760
# UPLOAD_DIR=/tmp

# Controller limits / timeouts
PROMPT_MAX_CHARS=10000
PROVIDER_TIMEOUT_MS=30000

# Optional model overrides
# OPENROUTER_MODEL_CHATGPT=openai/gpt-4o
# OPENROUTER_MODEL_GEMINI=google/gemini-1.5-flash
# OPENROUTER_MODEL_CLAUDE=anthropic/claude-3.5-sonnet
# OPENAI_MAX_TOKENS=4096
# GEMINI_MAX_TOKENS=4096
# CLAUDE_MAX_TOKENS=4096
